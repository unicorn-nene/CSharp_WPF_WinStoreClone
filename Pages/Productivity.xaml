<Page x:Class="WindowsStoreClone.Pages.Productivity"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindowsStoreClone.Pages"
      xmlns:uc="clr-namespace:WindowsStoreClone.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Productivity">

    <Grid Name="ProductivityWindowGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35"></ColumnDefinition>
            <ColumnDefinition Width="0.60*"></ColumnDefinition>
            <ColumnDefinition Width="0.40*"></ColumnDefinition>
            <ColumnDefinition Width="35"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TabControl
            x:Name="MainTabControl"
            Visibility="Visible"
            Grid.Row="0"
            Grid.Column="1"
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            ClipToBounds="True">
            <TabItem
                Header="Productivity"
                Name="ProductivityTab">
                <ScrollViewer
                    Name="ProductivityScrollViewer"
                    Margin="10"
                    HorizontalScrollBarVisibility="Hidden"
                    VerticalScrollBarVisibility="Hidden"
                    Loaded="ProductivityScrollViewer_Loaded">
               
                <StackPanel
                    Name="ProductivityStackPanel"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Visibility="Visible"
                    Width="{Binding ElementName=ProductivityScrollViewer, Path=ActualWidth}"
                    >
                        <uc:ProductivityTopApps
                            x:Name="ProductivityTopApps"
                            HorizontalAlignment="Left"
                            Width="{Binding ElementName=ProductivityScrollViewer, Path=ActualWidth}"
                            Margin="2">
                        </uc:ProductivityTopApps>
                        <Label
                            HorizontalAlignment="Left"
                            Margin="10,10,10,10"
                            Content="App specials"
                            FontSize="40"
/>
                        <uc:AppsViewer
                            x:Name="FeaturesAppsViewer"
                            Width="{Binding ElementName=ProductivityScrollViewer,Path=ActualWidth}"
                            HorizontalAlignment="Left"
                            Margin="2"
                        />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
