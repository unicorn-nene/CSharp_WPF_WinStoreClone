<UserControl x:Class="WindowsStoreClone.UserControls.AppDetailsTabContent.Related"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsStoreClone.UserControls.AppDetailsTabContent"
             xmlns:us="clr-namespace:WindowsStoreClone.UserControls"
             mc:Ignorable="d" 
             Name="RelatedUserControl"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel
        Orientation="Vertical"
        VerticalAlignment="Top"
        HorizontalAlignment="Left"
        Visibility="Visible"
        Background="#2e2e2e"
        Width="{Binding ElementName=RelatedUserControl, Path=ActualWidth}"
        >
        <Label 
            FontSize="25"
            Foreground="White"
            Margin="0,0,0,30"
            >People also like
        </Label>
        <us:AppsViewer 
            x:Name="AppsViewer1"
        ></us:AppsViewer>

        <Label 
           FontSize="25"
           Foreground="White"
           Margin="0,40,0,30"
           >Top free games
        </Label>
        <us:AppsViewer 
            x:Name="AppsViewer2"
        ></us:AppsViewer>

        <Label 
           FontSize="25"
           Foreground="White"
           Margin="0,40,0,30"
           >Top paid games
        </Label>
        <us:AppsViewer 
            x:Name="AppsViewer3"
        ></us:AppsViewer>

        <Label 
           FontSize="25"
           Foreground="White"
           Margin="0,40,0,30"
           >Best rated games
        </Label>
        <us:AppsViewer 
            x:Name="AppsViewer4"
        ></us:AppsViewer>
        
        <Label 
           FontSize="25"
           Foreground="White"
           Margin="0,40,0,30"
           >Best selling games
        </Label>
        <us:AppsViewer 
            x:Name="AppsViewer5"
        ></us:AppsViewer>
        
    </StackPanel>
</UserControl>
